--Create a makeup store database

CREATE TABLE nancy_makeup (id INTEGER PRIMARY KEY, name TEXT, quantity INTEGER, aisle INTEGER, price INTEGER);

INSERT into nancy_makeup VALUES 
(1, "eyeshadow", 100, 1, 12.45),
(2, "lipstick", 100, 2, 8.99),
(3, "blush", 75, 3, 10.99),
(4, "bronzer", 75, 3, 10.99),
